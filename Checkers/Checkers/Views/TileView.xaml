<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Checkers.Views.TileView"
             xmlns:models="clr-namespace:Checkers.Models"
             x:DataType="models:Tile">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame WidthRequest="100"
                   HeightRequest="100"
                   CornerRadius="0"
                   Padding="0"
                   Margin="0"
                   x:Name="tile"
                   BackgroundColor="{TemplateBinding TileColor}"
                   BorderColor="{TemplateBinding TileColor}"
            >
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Ellipse  Fill="Black"  WidthRequest="60"  HeightRequest="60"  HorizontalOptions="Center"
                            VerticalOptions="Center"/> 
                </StackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Tapped="OnTapGestureRecognizerTapped"
                        NumberOfTapsRequired="1" />
                </Frame.GestureRecognizers>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
